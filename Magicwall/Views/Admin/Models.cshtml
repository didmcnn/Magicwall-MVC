@using EntityLayer.Concrete
@model List<ModelPageItem>

@{
    ViewData["Title"] = "Modeller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Links {
    <link href="~/lib/filepond/filepond.min.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <span class="font-weight-bold flex-fill my-auto">Model Listesi</span>
                <button class="btn btn-primary w-auto" data-toggle="modal" data-target="#modal-default"><i class="fa fa-plus"></i></button>
                <div class="modal fade" id="modal-default">
                    <div class="modal-dialog">
                        <form method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="Models">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Model Ekle</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-12">
                                            <label>Başlık</label>
                                            <input type="text" class="form-control" name="Name" required />
                                        </div>
                                        <div class="col-12">
                                            <label>Başlık</label>
                                            <input type="file" id="ModelFileInput" name="ModelFileInput" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer justify-content-end">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">iptal</button>
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </form>
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal -->
            </div>
            <div class="card-body">
                <table id="datatable" class="table-striped table-bordered w-100">
                    <thead>
                        <tr>
                            <th class="px-2 py-1">Id</th>
                            <th class="px-2 py-1">Adı</th>
                            <th class="px-2 py-1">Resim</th>
                            <th class="px-2 py-1">Oluşturma Tarihi</th>
                            <th class="px-2 py-1">İşlem</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-2 py-1">@item.Id</td>
                                <td class="px-2 py-1">@item.Name</td>
                                <td class="px-2 py-1">@item.Image</td>
                                <td class="px-2 py-1">@item.CreatedDate.ToLongDateString()</td>
                                <td><a class="btn btn-danger" onclick="DeleteModel(@item.Id)"><i class="fa fa-trash"></i></a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/filepond/filepond.min.js"></script>

    <script>
        // Get a reference to the file input element
        const inputElement = document.getElementById("ModelFileInput");
        // Create a FilePond instance
        const pond = FilePond.create(inputElement);
        pond.setOptions({ storeAsFile: true });
    </script>

    <script>
        $(document).ready(function () {
            table = new DataTable('#datatable', {
                scrollY: "",
                language: { url: "/plugins/datatables/tr.json" },
                order: [0, "desc"]
            });
        });
    </script>

    <script>
        // Delete Model Function with SweetAlert
        function DeleteModel(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu modeli silmek istediğinizden emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // If user confirms, send AJAX request
                    $.ajax({
                        url: '/Admin/DeleteModel', // Replace with your actual endpoint
                        type: 'DELETE', // Use DELETE if supported; otherwise use POST
                        data: { Id: id },
                        success: function (response) {
                            Swal.fire(
                                'Silindi!',
                                'Model başarıyla silindi.',
                                'success'
                            );
                            // Remove the deleted row from the table
                            table.row($(`a[onclick="DeleteModel(${id})"]`).parents('tr')).remove().draw();
                        },
                        error: function (xhr, status, error) {
                            Swal.fire(
                                'Hata!',
                                'Model silinirken bir hata oluştu.',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    </script>

}