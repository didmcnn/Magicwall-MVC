@{
    ViewBag.Title = "Contact";
    Layout = "_Layout";
}

<section class="py-2 section-contact">
    <div class="container mb-5">
        <div class="row justify-content-center text-center mb-3">
            <div class="col-lg-8 col-xxl-7">
                <h2 class="display-5 fw-bold mb-5 mt-3">Bizimle İletişime Geçin</h2>
                <p class="lead mb-5">Görüş, soru, öneri ve teklif talepleriniz için aşağıdaki bilgileri kullanarak bizimle iletişime geçebilirsiniz</p>

            </div>
        </div>
        <div class="row justify-content-between mt-5 mb-5">
            <div class="col-lg-6">
                <h5 class="fw-semibold mb-3">Daha fazla bilgi için bize ulaşın</h5>
                <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Contact">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <input class="form-control bg-light" name="Name" placeholder="Ad" type="text" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <input class="form-control bg-light" name="Surname" placeholder="Soyad" type="text" required>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3">
                                <input class="form-control bg-light" name="Email" placeholder="Email" type="email" required>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3">
                                <input class="form-control bg-light" name="Phone" placeholder="Phone" type="text" required>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control bg-light" name="Message" placeholder="Mesajınız" rows="4" required></textarea>
                    </div>
                    <div class="col-md-4 ms-auto">
                        <div class="d-grid">
                            <button class="btn btn-primary" type="submit">Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-5 mt-5 mb-5 mt-lg-0">
                <div class="mb-4">
                    <h5>Adres</h5>
                    <p>Feyzi Çakmak Mah. Atatürk Caddesi</p>
                </div>
                <div class="mb-4">
                    <h5>Telefon</h5>
                    <p>+90 539 549 85 85</p>
                </div>
                <div class="mb-4">
                    <h5>Email</h5>
                    <p>hello@mailmail.com</p>
                </div>
                <div class="mb-4">
                    <h5>Sosyal Medyalarımız</h5>
                    <a class="me-3" href="#"><i class="bi bi-instagram"></i></a>
                    <a class="me-3" href="#"><i class="bi bi-twitter-x"></i></a>
                    <a class="me-3" href="#"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div>
        <div class="mt-5">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d60212.86988294046!2d28.92163159695222!3d41.00823759909985!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caba67f0004b99%3A0xfbe68ba6327b4de4!2zS_WfYW5idWw!5e0!3m2!1str!2str!4v1635616181971!5m2!1str!2str"
                width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
</section>
