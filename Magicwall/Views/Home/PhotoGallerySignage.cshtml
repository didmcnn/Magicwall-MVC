@model List<PhotoPageItem>

@{
    ViewData["Title"] = "PhotoGallerySignage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Links{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fancyapps/ui@5.0/dist/fancybox/fancybox.css" />

}
<section class="py-5 section-photo">
    <div class="container">
        <div class="row justify-content-center text-center mb-3 mb-md-5">
            <div class="col-lg-8 col-xxl-7">
                <h2 class="display-5 fw-bold mb-3">Foto Galeri Tabelalar</h2>
                <p class="lead">Ürünlerimizi ve projelerimizi daha yakından görmek için fotoğraf galerimizi keşfedin.
                    Estetik ve kaliteyi bir arada sunan çalışmalarımızı burada bulabilirsiniz.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <a href="~/Files/ModelImages/@item.Image" data-fancybox="gallery" data-caption="@item.Name">
                        <img src="~/Files/ModelImages/@item.Image" class="img-fluid rounded shadow-sm" style="width: 100%; height: 200px; object-fit: cover;">
                    </a>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@fancyapps/ui@5.0/dist/fancybox/fancybox.umd.js"></script>
    <script>
        Fancybox.bind("[data-fancybox]", {
          // Your custom options
        });

    </script>
}