@model List<HomePageItem>
@{
    ViewData["Title"] = "Home Page";
}


<!-- Banner Section with Parallax -->
<a href="~/Files/Catalog/@ViewBag.catalog" target="_blank" class="banner-section text-center text-decoration-none" style="background-image: url('../img/banner-1.jpg');">
    <div class="overlay"></div>
    <div class="container position-relative d-flex align-items-center justify-content-center">
        <h2 class="display-5 text-white">MagicWall E-Katalog</h2>
    </div>
</a>
<!-- End Banner Section -->
<!--- Ana Kısım ---->
<section class="py-5 main-section">
    <div class="container">
        <div class="row justify-content-center text-center mb-4 mb-md-5">
            <div class="col-xl-9 col-xxl-8 mb-4">
                <h2 class="display-5">Dekorasyon ve Tabela İçin Mükemmel Seçenekler</h2>
                <p class="lead mt-4">' Mekanlarınıza modern ve zarif bir dokunuş katmak için tasarlandı '</p>
            </div>
        </div>

        @if (Model.Count > 0)
        {
            for (int i = 0; i < Model.Count; i++)
            {

                if (i % 2 == 0)
                {
                    <div class="row g-0 align-items-center">
                        <div class="col-md-6 position-relative">
                            <img alt="" class="img-fluid" src="~/Files/homePageItems/@Model[i].Image" height="65">
                            <a href="/Home/Models" class="btn transparent-btn position-absolute end-0 translate-middle-y me-3">MODELLERİ İNCELEYİN</a>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-lg-12 col-xxl-10 col-xl-12">
                                    <div class="p-md-3 p-xl-5 mt-4 mt-md-0">
                                        <h2 class="my-1">@Model[i].Title</h2>
                                        <p class="my-4">
                                            @Model[i].Text
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row py-5 g-0 align-items-center mt-5">
                        <div class="col-md-6 order-2 order-md-1">
                            <div class="row justify-content-end">
                                <div class="col-lg-12 col-xxl-10 col-xl-12">
                                    <div class="p-md-3 p-xl-5 mt-4 mt-md-0">
                                        <h2 class="my-1">@Model[i].Title</h2>
                                        <p class="my-4">
                                            @Model[i].Text
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 order-1 order-md-2 position-relative">
                            <img alt="" class="img-fluid" src="~/Files/homePageItems/@Model[i].Image">
                            <a href="/Home/Models" class="btn transparent-btn position-absolute end-0 translate-middle-y me-3">MODELLERİ İNCELEYİN</a>
                        </div>
                    </div>
                }

            }
        }
    </div>
</section>
<!--- End Ana Kısım --->
