@{
    ViewBag.Title = "Photo Gallery";
    Layout = "_Layout";
}

<section class="py-5 section-photo">
    <div class="container">
        <div class="row justify-content-center text-center mb-3 mb-md-5">
            <div class="col-lg-8 col-xxl-7">
                <h2 class="display-5 fw-bold mb-3">Foto Galeri</h2>
                <p class="lead">
                    Ürünlerimizi ve projelerimizi daha yakından görmek için fotoğraf galerimizi keşfedin.
                    Estetik ve kaliteyi bir arada sunan çalışmalarımızı burada bulabilirsiniz.
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-5">
                <a href="/Home/PhotoGalleryDecoration">
                    <div class="card border-0 position-relative gallery-card">
                        <img alt="Dekorasyon" class="img-fluid rounded" src="~/img/decor.jpeg">
                        <div class="overlay">
                            <div class="text-white">Dekorasyon</div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-6 mb-5">
                <a href="/Home/PhotoGallerySignage">
                    <div class="card border-0 position-relative gallery-card">
                        <img alt="Tabela" class="img-fluid rounded" src="~/img/sign.jpeg">
                        <div class="overlay">
                            <div class="text-white">Tabela</div>
                        </div>
                    </div>
                </a>

            </div>

        </div>
    </div>
</section>
