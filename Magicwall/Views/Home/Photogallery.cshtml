@model List<PhotoPageItem>
@{
    ViewBag.Title = "Photo Gallery";
    Layout = "_Layout";
}

<section class="py-5 section-photo">
    <div class="container">
        <div class="row justify-content-center text-center mb-3 mb-md-5">
            <div class="col-lg-8 col-xxl-7">
                <h2 class="display-5 fw-bold mb-3">Foto Galeri</h2>
                <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta harum ipsum venenatis metus sem veniam eveniet aperiam suscipit.</p>
            </div>
        </div>

        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 mb-5">
                    <div class="card border-0 position-relative gallery-card">
                        <img alt="@item.Name" class="img-fluid rounded" src="~/Files/PhotoPage/@item.Image">
                        <div class="overlay">
                            <div class="text-white">@item.Name</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
