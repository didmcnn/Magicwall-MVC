@model List<ReferencesPageItem>
@{
    ViewBag.Title = "References";
    Layout = "_Layout";
}

<div class="parallax-section-references">
    <h2 class="display-4">Referanslarımız</h2>
</div>


<div class="container my-5 section-references">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        <!-- Satır 1 -->
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <img src="~/Files/References/@item.Image" class="card-img-top" alt="Referans">
                    </div>
                </div>
            }
        }

    </div>
</div>
