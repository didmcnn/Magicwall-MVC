@model ModelPageItem
@{
    ViewBag.Title = "Model Detayları";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="mb-4">
        <h1 class="display-4 fw-bold">@Model.Name</h1>
        <p class="lead text-muted">@Model.Details.SubTitle</p>
    </div>
    <div class="row">
        <!-- Slider -->
        <div class="col-lg-8 mb-4">
            <div id="productSlider" class="carousel slide pointer-event me-5" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Details.ModelImages.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img src="~/Files/ModelImages/@Model.Details.ModelImages.ToList()[i].Path" class="d-block w-100" style="max-height: 500px; object-fit: cover;">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="~/Files/ModelImages/@Model.Details.ModelImages.ToList()[i].Path" class="d-block w-100" style="max-height: 500px; object-fit: cover;">
                            </div>
                        }

                    }
                </div>

                <!-- Carousel Göstergeleri -->
                <div class="carousel-indicators">
                    @for (int i = 0; i < Model.Details.ModelImages.Count; i++)
                    {
                        if (i == 0)
                        {
                            <button type="button" data-bs-target="#productSlider" data-bs-slide-to="@i" class="active"></button>
                        }
                        else
                        {
                            <button type="button" data-bs-target="#productSlider" data-bs-slide-to="@i"></button>

                        }
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#productSlider" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#productSlider" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>

        <!-- Ürün Bilgileri -->
        <div class="col-lg-4">
            <h2 class="fw-700">@Model.Name</h2>
            <p class="text-muted">
                @Model.Details.Description
            </p>
            <p class="fw-bold">@Model.Details.AltTitle</p>

            <!-- Renkler -->
            <div class="mt-4">
                <h3>RENKLER</h3>
                <div class="row row-cols-3 row-cols-md-6 g-2 mt-3">
                    <div class="col">
                        <a href="/img/vizon.jpg" data-fancybox="colors" class="color-image">
                            <img src="/img/vizon.jpg" alt="Vizon" class="img-fluid" style="aspect-ratio: 1; object-fit: cover;">
                            @* <small class="d-block text-secondary">Vizon</small> *@
                        </a>
                    </div>
                    <div class="col">
                        <a href="/img/vizon.jpg" data-fancybox="colors" class="color-image">
                            <img src="/img/vizon.jpg" alt="Vizon" class="img-fluid" style="aspect-ratio: 1; object-fit: cover;">
                            @* <small class="d-block text-secondary">Vizon</small> *@
                        </a>
                    </div>
                    <div class="col">
                        <a href="/img/gümüş.jpg" data-fancybox="colors" class="color-image">
                            <img src="/img/gümüş.jpg" alt="Gümüş" class="img-fluid" style="aspect-ratio: 1; object-fit: cover;">
                            @* <small class="d-block text-secondary">Gümüş</small> *@
                        </a>
                    </div>
                    <div class="col">
                        <a href="/img/vizon.jpg" data-fancybox="colors" class="color-image">
                            <img src="/img/vizon.jpg" alt="Vizon" class="img-fluid" style="aspect-ratio: 1; object-fit: cover;">
                            @* <small class="d-block text-secondary">Vizon</small> *@
                        </a>
                    </div>
                    <div class="col">
                        <a href="/img/gümüş.jpg" data-fancybox="colors" class="color-image">
                            <img src="/img/gümüş.jpg" alt="Gümüş" class="img-fluid" style="aspect-ratio: 1; object-fit: cover;">
                            @* <small class="d-block text-secondary">Gümüş</small> *@
                        </a>
                    </div>
                    <div class="col">
                        <a href="/img/gümüş.jpg" data-fancybox="colors" class="color-image">
                            <img src="/img/gümüş.jpg" alt="Gümüş" class="img-fluid" style="aspect-ratio: 1; object-fit: cover;">
                            @* <small class="d-block text-secondary">Gümüş</small> *@
                        </a>
                    </div>
                </div>
            </div>

            <!-- Dökümanlar -->
            <div class="mt-4">
                <div class="row g-2">
                    <div class="col-md-4">
                        <a href="#" class="text-decoration-none">
                            <div class="card h-100 text-center document-card py-2">
                                <div class="card-body p-2">
                                    <i class="fas fa-file-alt fa-lg mb-1 text-primary"></i>
                                    <h6 class="text-dark small mb-0">TEKNİK BİLGİ</h6>
                                    <small class="text-muted" style="font-size: 0.7rem;">İncele</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="#" class="text-decoration-none">
                            <div class="card h-100 text-center document-card py-2">
                                <div class="card-body p-2">
                                    <i class="fas fa-tools fa-lg mb-1 text-primary"></i>
                                    <h6 class="text-dark small mb-0">MONTAJ</h6>
                                    <small class="text-muted" style="font-size: 0.7rem;">İncele</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="#" class="text-decoration-none">
                            <div class="card h-100 text-center document-card py-2">
                                <div class="card-body p-2">
                                    <i class="fas fa-cube fa-lg mb-1 text-primary"></i>
                                    <h6 class="text-dark small mb-0">3D MODEL</h6>
                                    <small class="text-muted" style="font-size: 0.7rem;">İncele</small>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Uygulama Görselleri -->
<div class="mt-5">
    <h3 class="mb-4 text-center">@Model.Name.ToUpper() SERİSİ DİĞER UYGULAMALAR</h3>
    <div class="row g-4">
        <!-- İlk satır -->

        @foreach (var item in Model.Details.ModelImages)
        {
            <div class="col-md-3">
                <a href="~/Files/ModelImages/@item.Path" data-fancybox="uygulamalar">
                    <img src="~/Files/ModelImages/@item.Path" class="img-fluid rounded shadow-sm" style="width: 100%; height: 200px; object-fit: cover;">
                </a>
            </div>
        }

    </div>
</div>

