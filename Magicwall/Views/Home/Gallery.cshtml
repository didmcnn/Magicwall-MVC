@{
    ViewBag.Title = "Gallery";
    Layout = "_Layout";
}

<section class="py-5 section-gallery">
    <div class="container">
        <div class="row justify-content-center text-center mb-3 mb-md-5">
            <div class="col-lg-8 col-xxl-7">
                <h2 class="display-5 fw-bold mb-3">Galeri </h2>
                <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta harum ipsum venenatis metus sem veniam eveniet aperiam suscipit.</p>
            </div>
        </div>
        <div class="row">
            <!-- İlk Kart -->
            <div class="col-md-6 mb-4">
                <a href="~/Home/Photogallery" class="text-decoration-none">
                    <div class="card border-0 position-relative gallery-card">
                        <img alt="Card image" class="img-fluid rounded" src="~/img/chair-1.jpg">
                        <div class="card-img-overlay d-flex flex-column justify-content-center text-center overlay-content">
                            <h3 class="card-title text-white">Foto Galeri</h3>
                        </div>
                    </div>
                </a>
            </div>

            <!-- İkinci Kart -->
            <div class="col-md-6 mb-4">
                <a href="~/Home/Videogallery" class="text-decoration-none">
                    <div class="card border-0 position-relative gallery-card">
                        <img alt="Card image" class="img-fluid rounded" src="~/img/resim-3.jpg">
                        <div class="card-img-overlay d-flex flex-column justify-content-center text-center overlay-content">
                            <h3 class="card-title text-white">Video Galeri</h3>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
