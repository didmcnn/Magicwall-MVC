@model List<VideoPageItem>
@{
    ViewBag.Title = "Video Gallery";
    Layout = "_Layout";
}

<!--- Videolar --->
<section class="py-5 section-video">
    <div class="container">
        <div class="row justify-content-center text-center mb-3 mb-md-5">
            <div class="col-lg-8 col-xxl-7">
                <h2 class="display-5 fw-bold mb-3">Video Galeri</h2>
                <p class="lead">Ürünlerimizle ilgili detaylı bilgi ve kullanım örneklerini video galerimizde izleyebilirsiniz.
                    Her bir modelin avantajlarını ve kullanım alanlarını videolarla keşfedin.</p>
            </div>
        </div>
        <div class="row">
            @if (Model.Count>0)
            {
                foreach (var item in Model)
                {
                    if (item.Video.Substring(item.Video.Length - 4) == ".mp4")
                    {
                        <div class="col-md-6 mb-5">
                            <div class="video-container position-relative">
                                <video width="100%" muted class="rounded" preload="metadata">
                                    <source src="~/Files/VideoPage/@item.Video" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                                <div class="overlay position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center">
                                    <span class="model-name">@item.Name</span>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</section>
<!--- End Videolar --->
